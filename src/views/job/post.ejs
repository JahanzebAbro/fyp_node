<%- include('../partials/employer_navbar.ejs') %>

<div class="job_post_header">

    <div class="page_title">
        <img src="/img/line.png" class="page_title_line">
        <span class="page_title_text">JOB</span>
    </div>
    
    <div class="post_create_status">
        <div>
            <span>Created : </span>
            <%= post.created_at %>
        </div>
        <div>
            <span>Deadline: </span>
            <%= post.deadline || 'None'%>
        </div>
        <div>
            <span>Status: </span>
            <%= post.status || 'None'%>
        </div>
    </div>

</div>


<div class="post_container">
    <div class="post_info">
        
        <div>
            <span>
                Title 
            </span><br>
            <%= post.title || 'None'%>
        </div>

        
        
        <div>
            <span>
                Openings 
            </span><br>
            <%= post.openings || 'None'%>
        </div>

        <div>
            <span>
                Job Type
            </span><br>
            <% if (post.job_types) { %>
                    <%= post.job_types.map(function(type) { 
                        return type.name; 
                    }).join(", ") %>
            <% } else { %>
                None
            <% } %>
        </div>

        <div>
            <span>
                Description
            </span><br>
            <%= post.description || 'None'%>
        </div>

        
        <div>
            <span>
                Work Environment
            </span><br>
            <%= post.style || 'None'%>
        </div>

        <div>
            <span>
                Address
            </span><br>
            <%= post.address || 'None'%>
        </div>

        <div>
            <span>
                Postcode
            </span><br>
            <%= post.postcode || 'None'%>
        </div>

        <div>
            <span>
                Salary Range
            </span><br>
            £<%= post.min_pay || '?'%> - £<%= post.max_pay || '?' %> (per month)
        </div>

        <div>
            <span>
                Start Date
            </span><br>
            <%= post.start_date || 'None'%>
        </div>

        <div>
            <span>
                Benefits
            </span><br>
            <% if (post.job_benefits.length > 0) { %>
                    <%= post.job_benefits.map(function(benefit) { 
                        return benefit.name; 
                    }).join(", ") %>
            <% } else { %>
                None
            <% } %>
        </div>
            
        <div>
            <span>
                Skills
            </span><br>
            <% if (post.job_skills.length > 0) { %>
                    <%= post.job_skills.map(function(skill) { 
                        return skill.name; 
                    }).join(", ") %>
            <% } else { %>
                None
            <% } %>
        </div>

        <div>
            <img src="/img/line.png" class="full_page_line">

            <div>
                <span>
                    CV Required
                </span><br>
                <%= post.cv_req ? 'Yes' : 'No'%>
            </div>
            <div>

                    <% if (post.job_questions.length > 0) { %>
                        
                        <% post.job_questions.forEach(function(question, index) { %>
                            <span style="text-decoration: underline;">Question <%= index + 1%></span><br>
                            <div>
                                <span>Question: </span><%= question.question %><br>
                                <span>Response Type: </span>
                                <%= question.response_type === 'text' ? 'Text' : 
                                    question.response_type === 'bool' ? 'Yes/No' : 
                                    question.response_type === 'num' ? 'Number' : 'None'  %><br>
                                <span>Required: </span><%= question.is_req ? 'Yes' : 'No' %>
                            </div>
                        <% }); %>
                        
                    <% } else { %>
                        <span>Questions</span><br>
                        None
                    <% } %>

            </div> 
        </div>

    </div>

    <div class="post_btn">
        <a href="/user/job/postings/edit/<%= post.id %>"><button type="button" class="post_edit_btn">Edit</button></a>
        <button type="button" class="post_delete_btn">Delete</button>
    </div>
</div>


<div class="modal delete_post_modal">
    
    <div class="modal_header delete_post_header">
        <span class="modal_header_title">Delete Job Post</span>
        <button class="modal_header_close">&times;</button>
    </div>
    <div class="modal_body delete_post_body">
        <p>Are you sure you want to delete this job?</p>
        
        <div class="delete_post_btn">
            <button type="button" class="delete_cancel_btn">Cancel</button>
            <button type="button" class="delete_confirm_btn">Confirm</button>
        </div>
    </div>
    
</div>
<div class="modal_overlay"></div>


<style>

    .modal{
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 1px solid black;
        border-radius: 1px;
        z-index: 1000;
        background-color: white;
        font-family: 'Jost';
        
    }

    .delete_post_modal {
        width: 300px;
        max-width: 50%;
    }

    .modal_header, .delete_post_header {
        padding: 10px 0px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal_header_title{
        margin-left: 10px;
        font-family: 'Playfair Display';
        font-weight: 700;
        font-size: 1.2rem;
    }

    .modal_header_close {
        border: 0;
        outline: 0;
        background: none;
        color: black;
        font-size: 1.5rem;
    }

    .modal_body, .delete_post_body {
        padding: 0px 10px;
        padding-bottom: 10px;
    }

    .modal_overlay{
        opacity: 0;
        pointer-events: none; /* Allow click events when overlay is off*/
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: rgba(0, 0, 0, 0.3);
    }

    .modal_overlay_active {
        opacity: 1;
        pointer-events: all;
    }

    .delete_confirm_btn {
        background-color: #dc4141;
        /* background-color: var(--red); */
    }

</style>


<script type="module" src="/scripts/post_utils.js"></script>